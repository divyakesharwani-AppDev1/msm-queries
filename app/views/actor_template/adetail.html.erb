

<h1>
  Actor <%= @the_actor_id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor_id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>


<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_actor["name"] %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
   Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

   <dt>
    Image
  </dt>
  <dd>
    <img src="@the_actor.image" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>

    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at)%> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>
    <th> Character name </th>
    <th> </th>
  </tr>

  <% @list_of_character.each do |a_char| %>
  <tr>
  <td> <%= Movie.all.where({:id=>a_char.movie_id}).at(0).title %> </td>
  <td> <%= Movie.all.where({:id=>a_char.movie_id}).at(0).year %> </td>
  <td> 
    <% d= Movie.all.where({:id=>a_char.movie_id}).at(0).director_id %>
    <%= Director.all.where({:id=>d}).at(0).name %>
  </td>

  <td>  <%= a_char.name %> </td>
  <td><a href="/movies/<%=a_char.movie_id%>">Show Details</a></td>

  </tr>
  <%end%>
</table>


  

 